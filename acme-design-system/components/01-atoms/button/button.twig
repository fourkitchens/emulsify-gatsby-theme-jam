{#
/**
 * Available variables:
 * - button_content - the content of the button (typically text)
 *
 * Available blocks:
 * - button_content - used to replace the content of the button with something other than text
 *   for example: to insert an icon
 */
#}

<button class="button">
  {% block button_content %}
    {{ button_content }}
  {% endblock %}
</button>
